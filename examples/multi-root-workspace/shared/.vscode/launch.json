{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test Runner",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--config", "jest.config.js", "--watch"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal"
    },
    {
      "name": "Type Check",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/tsc",
      "args": ["--noEmit", "--watch"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Lint",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/eslint",
      "args": ["src/**/*.js", "--fix"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}