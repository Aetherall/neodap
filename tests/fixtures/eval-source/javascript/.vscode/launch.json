{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/main.js",
      "skipFiles": ["<node_internals>/**"],
      "console": "internalConsole"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Debug stop",
      "program": "${workspaceFolder}/main.js",
      "skipFiles": ["<node_internals>/**"],
      "console": "internalConsole",
      "stopOnEntry": true
    }
  ]
}
