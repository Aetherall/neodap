{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Current File",
      "type": "pwa-node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Debug Main",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.js",
      "cwd": "${workspaceFolder}",
      "args": ["--env", "development", "${fileBasename}"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*",
        "NODE_PATH": "${workspaceFolder}/node_modules"
      },
      "console": "integratedTerminal",
      "skipFiles": ["${workspaceFolder}/node_modules/**"]
    },
    {
      "name": "Debug Tests",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/tests/${fileBasenameNoExtension}.test.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "TEST_TIMEOUT": "5000"
      }
    }
  ]
}