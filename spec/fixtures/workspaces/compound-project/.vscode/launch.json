{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/server/index.js",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Client",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/client/app.js",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack",
      "configurations": ["Server", "Client"],
      "stopAll": true
    }
  ]
}